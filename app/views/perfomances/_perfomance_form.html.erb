<%= form_with(model: @perfomance, local: true) do |form| %>
  <% if @perfomance.errors.any? %>
    <div>
      <h2>Ошибки:</h2>
      <ul>
        <% @perfomance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="center_perfomance">
    <div>
      <div class='text'>
        <%= form.label :title, "Название:" %>
        <%= form.text_field :title %>
      </div>

      <div class='text'>
        <%= form.label :duration, "Продолжительность (мин):" %>
        <%= form.number_field :duration, min: 1 %>
      </div>

      <div class='text'>
        <%= form.label :age_rating, "Возрастное ограничение:" %>
        <%= form.text_field :age_rating, pattern: '\\d{1,2}\\+' %>
      </div>

      <div class='text'>
        <%= form.label :release_date, "Дата выпуска:" %>
        <%= form.date_select :release_date, start_year: 1900, end_year: Time.now.year %>
      </div>
    </div>
  </div>

  <div class="but">
    <ul>
      <div>
        <%= link_to 'Назад', @perfomance.new_record? ? perfomances_path : perfomance_path(@perfomance), class: 'button' %>
        <%= form.submit @perfomance.new_record? ? 'Добавить спектакль' : 'Сохранить изменения', class: 'button' %>
    </div>
    </ul>
  </div>
<% end %>